<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Animations.SimpleAnimation.SimpleAnimationPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Animation" />

            <BoxView x:Name="BoxAnimated"
                     WidthRequest="100"                     
                     HeightRequest="100"
                     CornerRadius="5"
                     BackgroundColor="Crimson" 
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Opacity="1"/>

            <StackLayout VerticalOptions="EndAndExpand">
                <Button Text="Animação combinada" Clicked="BtnAnimacaoCombinada"/>
                <Button Text="Animação Personalizada" Clicked="BtnAnimacaoPersonalizada"/>
                <Button Text="Translate" Clicked="BtnTranslate"/>
                <Button Text="Rotation" Clicked="BtnRotation"/>
                <Button Text="Scale" Clicked="BtnScale"/>
                <Button Text="Opacity" Clicked="BtnOpacity"/>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>