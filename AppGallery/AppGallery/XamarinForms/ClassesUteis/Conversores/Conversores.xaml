<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.ClassesUteis.Conversores.Conversores">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Converter" />

            <ListView x:Name="List01" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Marca}"/>
                                <Label Text="{Binding Modelo}"/>
                                <Label Text="{Binding Opcionais}"/>
                                <Label Text="{Binding Valor}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>