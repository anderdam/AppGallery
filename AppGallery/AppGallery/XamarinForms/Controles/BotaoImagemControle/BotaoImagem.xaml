<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Controles.BotaoImagemControle.BotaoImagem">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Source, BorderColor" />
            <ImageButton 
                Source="paperPlane48x48.png"
                BackgroundColor="White"
                BorderColor="Black"
                BorderWidth="2"
                HorizontalOptions="Center"
                Padding="5"
                />

            <Label Text="Aspect, " />
            <ImageButton 
                Source="paperPlane48x48.png"
                WidthRequest="200"
                HeightRequest="140"
                Aspect="AspectFit"
                BackgroundColor="White"
                BorderColor="Black"
                BorderWidth="2"
                HorizontalOptions="Center"
                Padding="5"
                
                Pressed="Pressionado" 
                Released="Liberado" 
                Clicked="Clicado"
                />            
            
            <Label Text="-" x:Name="LblPressionado" />
            <Label Text="-" x:Name="LblLiberado" />
            <Label Text="-" x:Name="LblClicado" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>