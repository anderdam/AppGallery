<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Controles.CaixaDeMarcacaoControle.CaixaDeMarcacao"
             Padding="10">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="IsChecked, Color" />
            <CheckBox IsChecked="True" Color="Blue" />

            <Label Text="Evento: CheckChanged" />
            <CheckBox x:Name="caixaMarcacao" CheckedChanged="CheckBox_CheckedChanged" />
            <Label x:Name="lblChecked" Text="-"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>