<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Listas.RefreshViewControle.RefreshViewControle"
             Padding="10">
    <ContentPage.Content>
        <RefreshView RefreshColor="Red" IsRefreshing="False" Refreshing="RefreshView_Refreshing">
            <ScrollView>
                <StackLayout>
                    <Label Text="RefreshView" />
                    <Label Text="Propriedades: RefreshColor, IsRefreshing" />
                    <Label Text="Eventos: Refreshing" />
                    <Label Text="Observação:" />
                    <Label Text="Observação: Precisa ter uma barra de rolagem para funcionar - ScrollView, ListView, ColectionView, CarouselView" />
                    <Label x:Name="lblStatus" Text="Não atualizado" TextColor="Red" FontSize="24"
                           HorizontalTextAlignment="Center" VerticalOptions="Center"/>
            
                </StackLayout>
            </ScrollView>
        </RefreshView>
    </ContentPage.Content>
</ContentPage>