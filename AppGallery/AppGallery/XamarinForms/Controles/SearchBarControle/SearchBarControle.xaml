<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Listas.SearchBarControle.SearchBarControle">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Propriedades: Text, TextColor" />
            <SearchBar Text="Pesquisando..." TextColor="Blue" />

            <Label Text="Propriedades: Placeholder, PlaceholderColor" />
            <SearchBar Placeholder="Pesquisando..." PlaceholderColor="LightBlue" />

            <Label Text="Propriedades: FontFamily, FontSize, FontAttributes, CharacterSpacing" />
            <SearchBar Placeholder="Pesquisando..." PlaceholderColor="LightBlue"
                       FontFamily="sans-serif-light"  FontSize="18"  FontAttributes="Italic" CharacterSpacing="5"
                       />
            <Label Text="Propriedades: CancelButtonColor" />
            <SearchBar CancelButtonColor="Red" />

            <Label Text="Eventos: TextChanged, SearchButtonPressed" />
            <SearchBar TextChanged="SearchBar_TextChanged" SearchButtonPressed="SearchBar_SearchButtonPressed" />
            <Label Text="-" x:Name="lblTextChanged"/>
            <Label Text="-" x:Name="lblSearchButtonPressed"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>