<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Listas.TimePickerControle.TimePickerControle">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Propriedades: Time"/>
            <TimePicker Time="14:15" Format="HH:mm"/>

            <Label Text="Propriedades: TextColor, FontFamily, FontSize, FontAttributes, CharacterSpacing"/>
            <TimePicker Time="14:15" Format="HH:mm"
                        TextColor="Blue" FontFamily="sans-serif-light" FontSize="18" FontAttributes="Italic" CharacterSpacing="2"
                        />
            <Label Text="Eventos: PropertyChanged"/>
            <TimePicker Time="14:15" Format="HH:mm"
                        PropertyChanged="TimePicker_PropertyChanged"
                        />
            <Label x:Name="lblInformativo"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>