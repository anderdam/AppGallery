             xmlns:controle="clr-namespace:AppGallery.XamarinForms.Layouts.LayoutControle">
    <ContentPage.Content>
        <ScrollView VerticalScrollBarVisibility="Never">
            <StackLayout>            
                <controle:CardHorizontal Titulo="Notícia 01" Texto="Texto 01" Cor="Gray" />
                <controle:CardHorizontal Titulo="Notícia 02" Texto="Texto 02" Cor="Red" />
                <controle:CardHorizontal Titulo="Notícia 03" Texto="Texto 03" Cor="#202020" />
                <controle:CardDiretor Nome="Stiven Spielberg" Descricao="Diretor renomado" BoxViewColor="Blue"/>
                <controle:CardDiretor/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>