<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Listas.ClassesEspeciais.ObservableCollectionClass">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ObservableCollection" />

            <StackLayout Orientation="Horizontal">
                <Button Text="Adicionar Item" Clicked="BtnAdicionar"/>
                <Button Text="Remover Item" Clicked="BtnRemover"/>
            </StackLayout>
            <ListView x:Name="List01">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nome}" Detail="{Binding Sobrenome}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
                
            </ListView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>