<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"                     
             x:Class="AppGallery.XamarinForms.Styles.MaterialDesign.MaterialDesignIO"
             Visual="Material">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Material Design" />

                <Frame Margin="10" HasShadow="True">
                    <StackLayout>
                        <Button Text="Botão" />
                        <CheckBox />
                        <Entry Placeholder="Entry"/>
                        <Editor Placeholder="Editor" VerticalOptions="FillAndExpand"/>
                        <DatePicker />
                        <TimePicker />
                        <Picker Title="Picker" />
                        <ProgressBar Progress="0.5"/>
                        <ActivityIndicator IsRunning="True"/>
                        <Stepper />
                        <Slider Minimum="0" Maximum="5" Value="3"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>